@page
@using DemetraShop.Models
@model DemetraShop.Pages.Plants.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Plant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Plant.Id" />
            <div class="form-group">
                <label asp-for="Plant.Name" class="control-label"></label>
                <input asp-for="Plant.Name" class="form-control" />
                <span asp-validation-for="Plant.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plant.DateAdded" class="control-label"></label>
                <input asp-for="Plant.DateAdded" class="form-control" />
                <span asp-validation-for="Plant.DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plant.Watering" class="control-label"></label>
                <select asp-for="Plant.Watering" class="form-control" asp-items="Html.GetEnumSelectList<Watering>()">
                    <option selected="selected" value="">Please select</option></select>
                <span asp-validation-for="Plant.Watering" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plant.Light" class="control-label"></label>
                <select asp-for="Plant.Light" class="form-control" asp-items="Html.GetEnumSelectList<Light>()">
                    <option selected="selected" value="">Please select</option></select>
                <span asp-validation-for="Plant.Light" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plant.Price" class="control-label"></label>
                <input asp-for="Plant.Price" class="form-control" />
                <span asp-validation-for="Plant.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plant.Description" class="control-label"></label>
                <input asp-for="Plant.Description" class="form-control" />
                <span asp-validation-for="Plant.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plant.ImgURL" class="control-label"></label>
                <input asp-for="Plant.ImgURL" class="form-control" />
                <span asp-validation-for="Plant.ImgURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
